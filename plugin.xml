<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="brother-bluetooth-print"
    version="1.0.0">
    <name>Brother Bluetooth Print</name>
    <description></description>
    <license>MIT</license>
    <keywords></keywords>
    <repo>https://github.com/JayJaber/cordova-plugin-brother-bluetooth-print.git</repo>
    <issue>https://github.com/JayJaber/cordova-plugin-brother-bluetooth-print/issues</issue>

    <!-- android -->
    <platform name="android">
      <js-module src="www/plugin.js" name="plugin">
        <runs/>

        <!-- This is the window variable name you want, like window.MyCordovaPlugin -->
        <clobbers target="BrotherBluetoothPrint" />
      </js-module>
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="BrotherBluetoothPrint">
          <param name="android-package" value="com.example.BrotherBluetoothPrint" />
          <param name="onload" value="true" />
        </feature>
      </config-file>

      <source-file src="src/android/com/example/BrotherBluetoothPrint.java" target-dir="src/com/example/" />
    </platform>
</plugin>